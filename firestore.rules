rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }
    match /advisor/{globalDoc}/insights/{insightId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    match /alerts/{userId}/items/{alertId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    match /reports/{userId}/items/{reportId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }
    match /attacks/{doc}/flows/{flowId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    match /adminConfig/{doc} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    match /{document=**} { allow read, write: if false; }
  }
}
